            <ToolBar>
                <Button>
                    <StackPanel Orientation="Horizontal">

                        <Button Name="btnDlgConnection" Click="btnDlgConnection_Click">
                            <TextBlock Margin="3"  FontFamily="Segoe MDL2 Assets" Text="&#xE8CE;" FontSize="24" VerticalAlignment="Center" />
                        </Button>
                            
               <!--

                      

                
                        <Ellipse Width="10" Height="10" Fill="Black"  HorizontalAlignment="Left"/>
                        <TextBlock HorizontalAlignment="Right" Width="60" Margin="5 0 0 0">Найти</TextBlock>
                        -->
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        
        
        
        
        <TabControl Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="3">

            <!--  -->
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </TabControl.ItemContainerStyle>

            <TabControl.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Background" Value="#ffcfd6e5"/>
                </Style>

                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>

            </TabControl.Resources>






            <TabItem  Background="#ffcfd6e5">
                <!--Background="#ff4d6082"-->
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3"  FontFamily="Segoe MDL2 Assets" Text="&#xEC06;" FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Margin="3"  Text="Object configuration" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Frame Source="pageCnf.xaml"/>
                <!--
                <Frame Source="/MultiSensorApp;component/01_Modbus/pageModbus.xaml"/>
                -->
            </TabItem>


        </TabControl>

    </Grid>
